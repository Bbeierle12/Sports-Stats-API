{
  "buildCommand": "pnpm run build:types && pnpm run build:web",
  "outputDirectory": "apps/web/dist",
  "installCommand": "pnpm install",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30,
      "includeFiles": "packages/types/dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
